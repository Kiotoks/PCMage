<%- include('template/cabecera', {titulo: 'PcMage - Buscar'}); %>
<body>
    <%- include('template/navbar'); %>
   <section class="cuerpo">
    <div style="height: 9vh;"></div>
    <section>
    <div class="text-center" style=" background-color: rgb(226, 203, 253); width:100%;">
      <h1 class="text-white text-center" style="margin-bottom: 0;font-size: 7vh; -webkit-text-stroke-color: black; -webkit-text-stroke-width: 0.2vh; padding-bottom: 1vh;">Noticias</h1>    </div>
    </section>
    
    <section class="container-fluid noticiasBusqueda" style="background-color: #1f1f1f;">
            <ul style="margin: 0;">
                <% noticias.forEach(function(noticia) { %>
                  <li>
                    <div class="row content">
                      <div class="col-sm-1">
                      </div>
                      <div class="col-sm-10"> 
                          <div class="card-deck text-center noticias-tips">
                          <div class="card" style="background-color: #353535; margin-top: 1vh; margin-bottom: 1vh;">
                              <img class="img-fluid" id="img" src="<%= noticia.img1 %>" style="aspect-ratio: 19/9;">
                              <div class="card-body">
                                <a id="a" href="/noticias/<%= noticia.code %>" style="text-decoration: none; color:white;"> <%= noticia.titulo %></a>
                              </div>
                          </div>
                        </div>
                      </div>
                      <div class="col-sm-1">
                      </div>
                    </div>
                    <div  class="noticias-tips">      
                    </div>
                  </li>
                <% }); %>
              </ul>
        </section>
    </section> 
    <%- include('template/footer'); %>
    <script src="pagPriScript.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

