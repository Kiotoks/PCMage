<%- include('template/cabecera', {titulo: 'PcMage - Pre-Build'}); %>
<body style="background-color: #1f1f1f; padding: 0;"  class="container-fluid d-flex-column">
    <%- include('template/navbar'); %>
    
    <section style="width: min(1024px,100%); margin: auto;">


        <div style="height: 15vh;"></div>
        <h1 class="text-white">Prebuild</h1>
        <hr style="background-color: rgb(151, 71, 255); height: 1px;">
        <section class="noticiasBusqueda">
            <% componentes.forEach(function(componente) { %>

               

              <div class="row rounded-lg" style="margin: 10px; background-color: rgb(226, 203, 253);">
                <div class="col-sm-3 d-flex-column" style="border: 3px rgb(151, 71, 255);">
                    <img src="<%= componente.img %>" class="img-fluid" style="aspect-ratio: 1/1; height: auto; width: 8em;" name="imagenComp">
                </div>
                <div class="col-sm-6 d-flex-column" style="border: 3px rgb(151, 71, 255); margin: auto;">
                    <a style="text-decoration: none;" href="<%= componente.link %>" name="linkComp"><p name="nombreComp"><%= componente.nom %></p></a>
                </div>
                <div class="col-sm-3 d-flex-column" style="border: 3px rgb(151, 71, 255); margin: auto;">
                    <p name="precioComp"> $ <%= componente.precio %></p>
                </div>
              </div>

            <% }); %>
        </section>
        <div style="height: 15vh;"></div>
    </section> 
    <%- include('template/footer'); %>
    <script src="pagPriScript.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

