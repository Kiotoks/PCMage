<%- include('template/cabecera', {titulo: 'PcMage - Herramientas'}); %>
<body>
    <%- include('template/navbar'); %>
    <div style="height: 9vh;"></div>
    <h1>Cargar noticias</h1>
    <form id="generate-form">
        <textarea id="titulo" rows="1" cols="50" placeholder="Titulo"></textarea><br>
        <textarea id="articulo" rows="4" cols="50" placeholder="Cuerpo de la noticia"></textarea><br>
        <textarea id="img1" rows="1" cols="50" placeholder="link de imagen 1"></textarea><br>
        <textarea id="img2" rows="1" cols="50" placeholder="link de imagen 2"></textarea><br>
        <textarea id="codigo" rows="1" cols="50" placeholder="codigo de la noticia para el link"></textarea><br>
        <textarea id="fecha" rows="1" cols="10" placeholder="dd/mm/aa"></textarea><br>
        <input type="submit" value="Generar">
    </form>
    <div style="height: 9vh;"></div>
    <h1>Cargar componente</h1>
    <form id="cargarProducto-form">
        <textarea id="mla" rows="1" cols="20" placeholder="MLA (Solo numeros)"></textarea><br>
        <textarea id="nombre" rows="1" cols="70" placeholder="Nombre"></textarea><br>
        <select name="tipo" id="tipo">
            <option value="cpu" selected>Procesador</option>
            <option value="gpu">Grafica</option>
            <option value="ram" >Ram</option>
            <option value="motherboard">Mother</option>
            <option value="power supply" >Fuente</option>
            <option value="storage" >Almacenamiento</option>
            <option value="case" >Gabinete</option>
          </select>
        <input type="submit" value="Cargar componente">
    </form>

    <h1>Búsqueda de Productos en Mercado Libre</h1>
    <input type="text" id="searchQuery" placeholder="Ingresa un término de búsqueda">
    <button id="buscarProductos">Buscar</button>

    <ul id="resultsList"></ul>


    <%- include('template/footer'); %>
    <script src="pagPriScript.js"></script>
    <script src="cargarNoticia.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
